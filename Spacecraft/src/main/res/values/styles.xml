<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Black.NoTitleBar.Fullscreen"/>

    <style name="AppTheme" parent="AppBaseTheme"/>

    <style name="LargeBackButton">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_text_height</item>
        <item name="android:padding">@dimen/button_padding</item>
    </style>

    <style name="RedBackButton" parent="@style/LargeBackButton">
        <item name="android:background">@layout/shape</item>
    </style>

    <style name="DialogTitle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/title_big_padding</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ActionButtons">
        <item name="android:layout_width">@dimen/action_button_size</item>
        <item name="android:layout_height">@dimen/action_button_size</item>
        <item name="android:layout_margin">@dimen/action_button_margin</item>
    </style>

    <item name="middle_weight" type="dimen" format="float">0.5</item>

</resources>